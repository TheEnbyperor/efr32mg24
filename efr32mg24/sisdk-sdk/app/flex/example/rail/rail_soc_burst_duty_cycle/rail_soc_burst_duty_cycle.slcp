project_name: rail_soc_burst_duty_cycle
label: "RAIL - SoC Burst Duty Cycle"
package: Flex
description: >
  The example sends a burst in Master Mode (sending a burst long enough to be
  received by a Slave) and listens in Duty Cycle mode in Slave mode. The app
  checks the time of the burst and tells the user if the Slave ON time is too
  short for reliable reception. With one click, this bare-metal sample app can
  be run on an OS; currently, MicriumOS and FreeRTOS are supported.
category: RAIL Examples
quality: production

#---------------- UC/UP components -------------------
component:
  - id: brd4001a
  - id: sl_system
  - id: clock_manager
  - id: device_init
  - id: board_control
    condition: [hardware_board]
  - id: sl_simple_rail_stub
  - id: rail_util_init
    instance:
      - inst0
  - id: rail_util_recommended
  - id: radio_config_simple_rail_singlephy
  - id: sl_flex_rail_package_assistant
  - id: app_log
  - id: app_assert
  - id: simple_rail_assistance
#------------Memory Protection Unit-------------------
  - id: mpu
#---------------------- CLI --------------------------
  - id: cli
    instance:
    - example
  - id: printf
  - id: iostream_recommended_stream
  - id: iostream_retarget_stdio
#---------------- Power - Sleep ---------------------
  - id: power_manager
#---------------------- LCD -------------------------
  - id: glib
#----------------- App specific ----------------------
  - id: sl_duty_cycle_core
#-------------- Restriction rules -------------------
  - id: restrictions_profile_base
  - id: restrictions_profile_connect
  - id: restrictions_profile_long_range

#----------------- Require list ----------------------
requires:
  - name: a_radio_config
  - name: sl_flex_rail_config
  - name: sl_flex_rail_channel_selector
  - name: sl_simple_rail_os
    condition:
      - "kernel"
  - name: radio_config_singlephy_device_family_fgm23
    condition:
      - "device_family_fgm23"
  - name: simple_button
  - name: simple_led

#----------------- Project files ---------------------
include:
  - path: .
    file_list:
    - path: app_init.h
    - path: app_process.h

source:
  - path: ../common/main/main.c
  - path: app_init.c
  - path: app_process.c

readme:
  - path: ../../../documentation/example/rail/rail_soc_burst_duty_cycle/readme.md

other_file:
  - path: "hw_filter_tags.yaml"
    condition:
      - "add_hw_filter_to_project"

#------------ Configuration overrides ----------------
